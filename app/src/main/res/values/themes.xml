<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Minesweeper" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SettingDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="windowMinWidthMajor">85%</item>
        <item name="android:windowAnimationStyle">@style/AnimSettingDialog</item>
    </style>

    <style name="AnimSettingDialog">
        <item name="android:windowEnterAnimation">@anim/slide_scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SelectModeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="windowMinWidthMajor">85%</item>
        <item name="android:windowAnimationStyle">@style/AnimSelectModeDialog</item>
    </style>

    <style name="AnimSelectModeDialog">
        <item name="android:windowEnterAnimation">@anim/slide_scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="windowMinWidthMajor">85%</item>
        <item name="android:windowAnimationStyle">@style/AnimAlertDialog</item>
    </style>

    <style name="AnimAlertDialog">
        <item name="android:windowEnterAnimation">@anim/slide_scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_scale_out</item>
    </style>
</resources>