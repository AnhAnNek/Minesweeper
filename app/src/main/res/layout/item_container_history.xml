<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/background_image"
        android:gravity="center"
        android:text="Lost"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:fontFamily="@font/minecraft_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_supporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/result_tv"
        app:layout_constraintStart_toEndOf="@+id/result_tv"
        app:layout_constraintTop_toTopOf="@+id/result_tv" />

    <TextView
        android:id="@+id/completion_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:fontFamily="@font/minecraft_regular"
        app:layout_constraintBottom_toTopOf="@id/view_supporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_tv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_tv"
        app:layout_constraintTop_toBottomOf="@id/view_supporter">

        <TextView
            android:id="@+id/game_mode_tv"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/minecraft_regular" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12/12/2022 12:34"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/minecraft_regular" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>