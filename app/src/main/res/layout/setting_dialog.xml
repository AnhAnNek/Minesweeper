<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/_14sdp">

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/minecraft_bold"
        android:text="Setting"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/_30ssp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_12sdp">

        <Button
            android:id="@+id/historyBtn"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/minecraft_bold"
            android:soundEffectsEnabled="false"
            android:text="History"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_24ssp" />

        <RelativeLayout
            android:id="@+id/musicLinear"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/historyBtn"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/background_button">

            <TextView
                android:id="@+id/musicTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/minecraft_bold"
                android:text="Music"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_24ssp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/musicSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@id/musicTxt"
                android:checked="true"
                app:switchMinWidth="@dimen/_30sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clickSoundLinear"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/musicLinear"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/background_button">

            <TextView
                android:id="@+id/clickSoundTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/minecraft_bold"
                android:text="Music"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_24ssp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/clickSoundSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@id/clickSoundTxt"
                android:checked="true"
                app:switchMinWidth="@dimen/_30sdp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>