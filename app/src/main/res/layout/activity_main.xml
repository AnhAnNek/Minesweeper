<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_border"
    android:orientation="horizontal"
    android:padding="@dimen/_8sdp"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/toolbarLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/flagImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/red_flag_btn"
            android:padding="@dimen/_1sdp"
            android:soundEffectsEnabled="false" />

        <TextView
            android:id="@+id/flagsTxt"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:fontFamily="@font/minecraft_bold"
            android:gravity="center"
            android:text="@{MainViewModel.qtyFlags}"
            android:textColor="@color/black"
            android:textSize="@dimen/_23ssp" />

        <ImageView
            android:id="@+id/newGameImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/smile"
            android:padding="@dimen/_1sdp"
            android:soundEffectsEnabled="false" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:fontFamily="@font/minecraft_bold"
            android:format="%s"
            android:gravity="center"
            android:textSize="@dimen/_23ssp" />

        <ImageView
            android:id="@+id/settingImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/setting"
            android:padding="@dimen/_1sdp"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLL">

        <TableLayout
            android:id="@+id/minesTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_primary_border"
            android:padding="@dimen/_4sdp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>