<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="false"
    android:largeHeap="true"
    tools:context=".activites.MainActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/flag_iv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/red_flag_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/flags_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="@dimen/_23ssp"
        app:layout_constraintTop_toTopOf="@id/refresh_iv"
        app:layout_constraintBottom_toBottomOf="@id/refresh_iv"
        app:layout_constraintEnd_toEndOf="@id/refresh_iv"
        />

    <ImageView
        android:id="@+id/refresh_iv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/smile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:format="%s"
        android:textSize="@dimen/_23ssp"
        app:layout_constraintStart_toEndOf="@id/refresh_iv"
        app:layout_constraintTop_toTopOf="@id/refresh_iv"
        app:layout_constraintBottom_toBottomOf="@id/refresh_iv"
        />

    <ImageView
        android:id="@+id/setting_iv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/border"
        android:padding="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="@id/refresh_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

    <TableLayout
        android:id="@+id/mines_tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/_300sdp"
        android:minHeight="@dimen/_300sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/border" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>