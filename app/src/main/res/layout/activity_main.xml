<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="false"
    android:largeHeap="true"
    tools:context=".activities.MainActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/flag_iv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/red_flag_btn"
        app:layout_constraintTop_toTopOf="@id/flags_tv"
        app:layout_constraintBottom_toBottomOf="@id/flags_tv"
        app:layout_constraintEnd_toStartOf="@id/flags_tv" />

    <TextView
        android:id="@+id/flags_tv"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="@dimen/_23ssp"
        app:layout_constraintTop_toTopOf="@id/refresh_iv"
        app:layout_constraintBottom_toBottomOf="@id/refresh_iv"
        app:layout_constraintEnd_toStartOf="@id/refresh_iv" />

    <ImageView
        android:id="@+id/refresh_iv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/smile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:format="%s"
        android:textSize="@dimen/_23ssp"
        app:layout_constraintStart_toEndOf="@id/refresh_iv"
        app:layout_constraintTop_toTopOf="@id/refresh_iv"
        app:layout_constraintBottom_toBottomOf="@id/refresh_iv" />

    <ImageView
        android:id="@+id/setting_iv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/setting"
        app:layout_constraintTop_toTopOf="@id/chronometer"
        app:layout_constraintBottom_toBottomOf="@id/chronometer"
        app:layout_constraintStart_toEndOf="@id/chronometer" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/refresh_iv"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableLayout
            android:id="@+id/mines_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/border" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>